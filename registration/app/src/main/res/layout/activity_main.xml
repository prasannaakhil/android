<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.prasannakumarambati.registration.MainActivity">



    <LinearLayout
        android:layout_width="396dp"
        android:layout_height="437dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.083"
        app:layout_constraintHorizontal_bias="0.0"
        tools:layout_editor_absoluteX="18dp">

        <LinearLayout
            android:layout_width="132dp"
            android:layout_height="match_parent"
            android:layout_weight="0.08"
            android:orientation="vertical"
            android:weightSum="1">


            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/colorPrimaryDark"

                android:text="Name:"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="15dp"
                android:text="Email:"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="12dp"
                android:background="@color/colorPrimaryDark"
                android:text="Date-of-birth:"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textAlignment="center"
                android:text="Phone no:"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimaryDark"
                android:text="Gender"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:text="Aadar number"
                />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textAlignment="center"
                android:background="@color/colorPrimaryDark"
                android:text="Pan card no:"
                android:textColor="@android:color/white"
                android:layout_marginTop="12dp"/>

            <TextView
                android:id="@+id/textView24"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:text="License number" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="18dp"
                android:background="@color/colorPrimaryDark"
                android:text="account number"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textAlignment="center"
                android:layout_marginTop="12dp"
                android:background="@color/colorPrimaryDark"
                android:text="School"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textAlignment="center"
                android:layout_marginTop="12dp"
                android:text="Inter" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textAlignment="center"
                android:layout_marginTop="12dp"
                android:background="@color/colorPrimaryDark"
                android:text="eng"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:text="about your self"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_weight="0.77"
            android:orientation="vertical"
            android:weightSum="1">


            <EditText
                android:id="@+id/ed1"
                android:layout_width="wrap_content"

                android:layout_weight="0.05"
                android:layout_height="32dp"
                android:backgroundTint="@android:color/darker_gray"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName"
                android:padding="0dp" />


            <EditText
                android:id="@+id/ed2"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:backgroundTint="@android:color/darker_gray"
                android:ems="10"
                android:hint="email"
                android:inputType="textPersonName"
                android:padding="0dp"
                android:layout_weight="0.05"/>

            <EditText
                android:id="@+id/ed3"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:backgroundTint="@android:color/darker_gray"
                android:ems="10"
                android:hint="date of birth"
                android:inputType="textPersonName"
                android:padding="0dp"
                android:layout_weight="0.05"/>


            <EditText
                android:id="@+id/ed4"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:backgroundTint="@android:color/darker_gray"
                android:ems="10"
                android:hint="phone no"
                android:inputType="textPersonName"
                android:padding="0dp"
                android:layout_weight="0.05"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <RadioButton
                    android:id="@+id/radioButton5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.52"
                    android:text="male" />

                <RadioButton
                    android:id="@+id/radioButton4"
                    android:layout_width="86dp"
                    android:layout_height="wrap_content"
                    android:text="female" />


            </RadioGroup>

            <EditText
                android:id="@+id/ed5"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:backgroundTint="@android:color/darker_gray"
                android:ems="10"
                android:hint="aadar"
                android:inputType="textPersonName"
                android:padding="0dp"
                android:layout_weight="0.05"/>

            <EditText
                android:id="@+id/ed6"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:backgroundTint="@android:color/darker_gray"
                android:ems="10"
                android:hint="pan no"
                android:inputType="textPersonName"
                android:padding="0dp"
                android:layout_weight="0.05"/>


            <EditText
                android:id="@+id/ed7"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:backgroundTint="@android:color/darker_gray"
                android:ems="10"
                android:hint="license no"
                android:inputType="textPersonName"
                android:padding="0dp"
                android:layout_weight="0.05"/>


            <EditText
                android:id="@+id/ed8"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:backgroundTint="@android:color/darker_gray"
                android:ems="10"
                android:hint="account no"
                android:inputType="textPersonName"
                android:padding="0dp"
                android:layout_weight="0.05"/>

            <EditText
                android:id="@+id/ed9"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:backgroundTint="@android:color/darker_gray"
                android:ems="10"
                android:hint="school"
                android:inputType="textPersonName"
                android:padding="0dp"
                android:layout_weight="0.05"/>


            <EditText
                android:id="@+id/ed10"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:backgroundTint="@android:color/darker_gray"
                android:ems="10"
                android:hint="inter"
                android:inputType="textPersonName"
                android:padding="0dp"
                android:layout_weight="0.05"/>


            <EditText
                android:id="@+id/ed11"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:backgroundTint="@android:color/darker_gray"
                android:ems="10"
                android:hint="enginnering"
                android:inputType="textPersonName"
                android:padding="0dp"
                android:layout_weight="0.05"/>

            <EditText
                android:id="@+id/ed12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/darker_gray"
                android:ems="10"
                android:hint="about your self"
                android:inputType="textMultiLine" />


        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.203"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/b2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Clear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.757"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


</android.support.constraint.ConstraintLayout>
