<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.prasannakumarambati.registration.MainActivity">


    <Button
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/holo_green_light"
        android:text="Submit"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/b2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/holo_red_light"
        android:text="Clear"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.757"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"

        android:layout_marginTop="8dp"
        android:text="Enter your details"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:layout_width="397dp"
        android:layout_height="452dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.186">

        <View
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:background="@android:color/black" />

        <LinearLayout
            android:layout_width="132dp"
            android:layout_height="match_parent"
            android:layout_weight="0.08"
            android:orientation="vertical"
            android:weightSum="1">

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@android:color/black" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"

                android:background="@color/colorPrimaryDark"
                android:text="Name:"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="15dp"
                android:background="@android:color/darker_gray"
                android:text="Email:"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="12dp"
                android:background="@color/colorPrimaryDark"
                android:text="Date-of-birth:"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray"
                android:text="Phone no:"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimaryDark"
                android:text="Gender"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray"
                android:text="Aadar number"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="12dp"
                android:background="@color/colorPrimaryDark"
                android:text="Pan card no:"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray"
                android:text="License number"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="18dp"
                android:background="@color/colorPrimaryDark"
                android:text="account number"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="20dp"

                android:layout_marginTop="12dp"
                android:background="@android:color/darker_gray"

                android:text="School"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="12dp"
                android:background="@color/colorPrimaryDark"
                android:text="Inter"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="12dp"
                android:background="@android:color/darker_gray"
                android:text="eng"
                android:textAlignment="center"

                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:background="@color/colorPrimaryDark"
                android:text="about your self"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/black" />

        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:background="@android:color/black" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@android:color/black"

            />

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_weight="0.63"
            android:orientation="vertical"
            android:weightSum="1">


            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@android:color/black" />

            <EditText
                android:id="@+id/ed1"
                android:layout_width="wrap_content"

                android:layout_height="32dp"
                android:layout_weight="0.05"
                android:backgroundTint="@android:color/darker_gray"
                android:ems="10"
                android:hint="name"
                android:inputType="textCapCharacters"
                android:padding="0dp"
                android:paddingLeft="0dp"
                android:textStyle="bold|italic" />


            <EditText
                android:id="@+id/ed2"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_weight="0.05"
                android:backgroundTint="@android:color/darker_gray"
                android:ems="10"
                android:hint="email"
                android:inputType="textEmailAddress"
                android:padding="0dp"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/ed3"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_weight="0.05"
                android:backgroundTint="@android:color/darker_gray"
                android:ems="10"
                android:hint="date of birth"
                android:inputType="date"
                android:padding="0dp"
                android:textStyle="bold|italic" />


            <EditText
                android:id="@+id/ed4"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_weight="0.05"
                android:backgroundTint="@android:color/darker_gray"
                android:ems="10"
                android:hint="phone no"
                android:inputType="number"
                android:padding="0dp"
                android:textAllCaps="false"
                android:textStyle="bold|italic" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <RadioButton
                    android:id="@+id/radioButton5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.52"
                    android:text="male"
                    android:textColor="@android:color/holo_blue_light" />

                <RadioButton
                    android:id="@+id/radioButton4"
                    android:layout_width="86dp"
                    android:layout_height="wrap_content"
                    android:text="female"
                    android:textColor="#ff69b4" />


            </RadioGroup>

            <EditText
                android:id="@+id/ed5"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_weight="0.05"
                android:backgroundTint="@android:color/darker_gray"
                android:ems="10"
                android:hint="aadar"
                android:inputType="number"
                android:padding="0dp"
                android:textAllCaps="false"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/ed6"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_weight="0.05"
                android:backgroundTint="@android:color/darker_gray"
                android:ems="10"
                android:hint="pan no"
                android:inputType="number"
                android:padding="0dp"
                android:selectAllOnFocus="false"
                android:singleLine="false"
                android:textStyle="bold|italic" />


            <EditText
                android:id="@+id/ed7"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_weight="0.05"
                android:backgroundTint="@android:color/darker_gray"
                android:ems="10"
                android:hint="license no"
                android:inputType="textPersonName"
                android:padding="0dp"
                android:textStyle="bold|italic" />


            <EditText
                android:id="@+id/ed8"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_weight="0.05"
                android:backgroundTint="@android:color/darker_gray"
                android:ems="10"
                android:hint="account no"
                android:inputType="number"
                android:padding="0dp" />

            <EditText
                android:id="@+id/ed9"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_weight="0.05"
                android:backgroundTint="@android:color/darker_gray"
                android:ems="10"
                android:hint="school"
                android:inputType="textPersonName"
                android:padding="0dp" />


            <EditText
                android:id="@+id/ed10"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_weight="0.05"
                android:backgroundTint="@android:color/darker_gray"
                android:ems="10"
                android:hint="inter"
                android:inputType="textPersonName"
                android:padding="0dp" />


            <EditText
                android:id="@+id/ed11"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_weight="0.05"
                android:backgroundTint="@android:color/darker_gray"
                android:ems="10"
                android:hint="enginnering"
                android:inputType="textPersonName"
                android:padding="0dp" />

            <EditText
                android:id="@+id/ed12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/darker_gray"
                android:ems="10"
                android:hint="about your self"
                android:inputType="textMultiLine" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/black" />


        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:background="@android:color/black" />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>
